<section class="content-header">
  <h1>
    Announcements
    <small>Get yourself notified</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Announcements</li>
  </ol>
</section>

<section class="content">
  <div class="box box-warning">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 dataTables_filter">
          <% if user_is_president %>
            <%= link_to 'New Announcement', new_announcement_path, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-bordered">
        <tr>
          <th>Title</th>
          <th></th>
        </tr>

        <% @announcements.each do |announcement| %>
          <tr>
            <td><%= announcement.title %> <%= '<small class="label bg-green">new</small>'.html_safe if (@unread_announcement_ids).include?(announcement.id)%></td>
            <td><%= link_to 'Show', announcement %></td>
            <% if user_is_president %>
              <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
              <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</section>
