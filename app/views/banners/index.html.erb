<section class="content-header">
  <h1>
    Banners
    <small>Highlight Yourself</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Banners</li>
  </ol>
</section>

<section class="content">
  <div class="box box-warning">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 dataTables_filter">
          <%= link_to 'New Banner', new_banner_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-bordered">
        <tr>
          <th>Mobile key</th>
          <th>Desktop key</th>
          <th>Desktop size</th>
          <th>Mobile size</th>
          <th colspan="3"></th>
        </tr>

        <% @banners.each do |banner| %>
          <tr>
            <td><%= banner.mobile_key %></td>
            <td><%= banner.desktop_key %></td>
            <td><%= banner.desktop_size %></td>
            <td><%= banner.mobile_size %></td>
            <td><%= link_to 'Show', banner %></td>
            <td><%= link_to 'Edit', edit_banner_path(banner) %></td>
            <td><%= link_to 'Destroy', banner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</section>
