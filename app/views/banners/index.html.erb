<%= render partial: 'banners/header/header'%>

<section class="content">
  <div class="box box-warning">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 dataTables_filter">
          <%= link_to new_banner_path, class: 'btn btn-primary' do %>
            <i class="fa fa-plus"></i>
            <span>New Banner</span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-bordered">
        <tr>
          <th>Area</th>
          <th style="width: 100px;"></th>
        </tr>

        <% @banners.each do |banner| %>
          <% cache banner do %>
            <tr>
              <td><%= banner.area %></td>
              <td style="width: 100px;">
                <% if user_is_president %>
                  <%= link_to banner, class: 'btn bg-yellow btn-xs', placeholder: 'Show' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_banner_path(banner), class: 'btn bg-primary btn-xs', placeholder: 'Edit' do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to banner, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn bg-red btn-xs' do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</section>
