<section class="content-header">
  <h1>
    Banners
    <small>Highlight Yourself</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Banners</li>
  </ol>
</section>


<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"> Announcement Information</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body">
      <table class="table">
        <tr>
          <td>Images:</td>
          <td><%#= @banner.images unless @banner.images.blank? %></td>
        </tr>

        <tr>
          <td>Mobile key:</td>
          <td><%= @banner.mobile_key %></td>
        </tr>

        <tr>
          <td>Desktop key:</td>
          <td><%= @banner.desktop_key %></td>
        </tr>

        <tr>
          <td>Desktop size:</td>
          <td><%= @banner.desktop_size %></td>
        </tr>

        <tr>
          <td>Mobile size:</td>
          <td><%= @banner.mobile_size %></td>
        </tr>
      </table>
    </div>

    <div class="box-footer">
      <%= link_to 'Edit', edit_banner_path(@banner), class: 'btn btn-success' %>
      <%= link_to 'Back', banners_path, class: 'btn btn-success' %>
    </div>

  </div>
</section>

