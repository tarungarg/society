<%= render partial: 'banners/header/header'%>

<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"> Announcement Information</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body">
      <table class="table">
        <tr>
          <td>Image:</td>
          <td><%=image_tag @banner.desktop_image.url %></td>
        </tr>

        <tr>
          <td>Image Url:</td>
          <td><%= @banner.desktop_url %></td>
        </tr>

      </table>
    </div>

    <div class="box-footer">
      <%= link_to 'Edit', edit_banner_path(@banner), class: 'btn btn-success' %>
      <%= link_to 'Back', banners_path, class: 'btn btn-success' %>
    </div>

  </div>
</section>

