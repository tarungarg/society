<%= render partial: 'charges/header/header'%>

<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"> Event Information</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body">
      <table class="table">
        <tr>
          <td>Title:</td>
          <td><%= @club.title %></td>
        </tr>

        <tr>
          <td>Desc:</td>
          <td><%= @club.desc %></td>
        </tr>

        <tr>
          <td>Date:</td>
          <td><%= @club.date %></td>
        </tr>

        <tr>
          <td>From time:</td>
          <td><%= @club.from_time %></td>
        </tr>

        <tr>
          <td>To time:</td>
          <td><%= @club.to_time %></td>
        </tr>

      </table>
    </div>

    <div class="box-footer">
      <%= link_to 'Edit', edit_club_path(@club), class: 'btn btn-success' if current_user.id == @club.user_id %>
      <%= link_to 'Back', clubs_path, class: 'btn btn-success' %>
    </div>

  </div>

</section>
