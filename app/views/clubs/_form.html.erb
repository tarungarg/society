<%= simple_form_for @club, validate: true  do |f| %>
  <div class="box-body">
    <%= f.error_notification %>
    <%= f.error :base,  class: 'alert alert-info' %>
    <%= f.input :title %>
    <%= f.input :desc, input_html: { class: 'ckeditor'} %>
    <%= f.input :from_time, start_year: Date.today.year,
                                end_year: Date.today.year + 1,
                                order: [:day, :month, :year] %>
    <%= f.input :to_time, start_year: Date.today.year,
                                end_year: Date.today.year + 1,
                                order: [:day, :month, :year] %>
  </div>

  <div class="box-footer">
    <%= f.button :submit %>
  </div>
<% end %>
