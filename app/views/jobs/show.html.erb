<section class="content-header">
  <h1>
    Jobs
    <small>Refer or Get hired</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Job</li>
  </ol>
</section>

<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"> Jobs Information</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body">
      <table class="table">
        <tr>
          <td>Title:</td>
          <td><%= @job.title %></td>
        </tr>

        <tr>
          <td>Desc:</td>
          <td><%= @job.desc.html_safe %></td>
        </tr>

        <%unless @job.files.blank? %>
          <tr>
          <% @job.files.each do |file| %>
            <td><%= link_to File.basename(file.path), file.url %></td>
          <% end %>
          </tr>
        <%end%>
      </table>
    </div>

    <div class="box-footer">
      <%= link_to 'Edit', edit_job_path(@job), class: 'btn btn-success' if @job.user_id == current_user.id %>
      <%= link_to 'Back', jobs_path, class: 'btn btn-success' %>
    </div>

  </div>
  <%= commontator_thread(@job) %>
</section>

