<%= simple_form_for(@charge) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :from_date, start_year: Date.today.year %>
    <%#= f.input :to_date %>
    <%= f.input :title %>
    <%= f.input :desc %>
    <%= f.input :period, collection: Charge.periods,  include_blank: false %>
    <%= f.input :amount %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

