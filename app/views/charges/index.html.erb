<section class="content-header">
  <h1>
    Funds
    <small>Aware of your money</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Funds</li>
  </ol>
</section>

<section class="content">
  <div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
      <li><a href="/funds">Balance</a></li>
      <!-- <li><%#= link_to 'Funds', trusts_path %></li> -->
      <li class="active"><%= link_to 'Charges', charges_path %></li>
    </ul>
  </div>

  <div class="box box-warning">
    <div class="box-header with-border">
      <div class="pull-right">
        <%= link_to 'New Charge', new_charge_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>From date</th>
            <!-- <th>To date</th> -->
            <th>Period</th>
            <th>Amount</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @charges.each do |charge| %>
            <%if user_is_president || @charge_ids.include?(charge.id) %>
              <tr>
                <td><%= charge.from_date %></td>
                <!-- <td><%#= charge.to_date %></td> -->
                <td><%= charge.period %></td>
                <td><%= charge.amount %></td>
                <td><%= link_to 'Show', charge %></td>
                <td><%= link_to 'Pay', charge %></td>
                <% if user_is_president %>
                  <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
                  <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</section>