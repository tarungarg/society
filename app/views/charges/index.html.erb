<div class="col">
  <ul class="nav nav-pills">
    <li><%= link_to 'Balance', funds_path %></li>
    <li><%= link_to 'Funds', trusts_path %></li>
    <li class="active"><%= link_to 'Charges', charges_path %></li>
  </ul>
</div>


<h1>Listing Charges</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <!-- <th>From date</th> -->
        <!-- <th>To date</th> -->
        <th>Period</th>
        <th>Amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @charges.each do |charge| %>
        <tr>
          <!-- <td><%#= charge.from_date %></td> -->
          <!-- <td><%#= charge.to_date %></td> -->
          <td><%= charge.period %></td>
          <td><%= charge.amount %></td>
          <td><%= link_to 'Show', charge %></td>
          <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
          <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

