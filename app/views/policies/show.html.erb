<%= render partial: 'policies/header/header'%>

<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"> Announcement Information</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body">
      <table class="table">
        <tr>
          <td>Name:</td>
          <td><%= @policy.name %></td>
        </tr>

        <%if @policy.file.url%>
          <tr>
            <td>File:</td>
            <td><%= link_to File.basename(@policy.file.path), @policy.file.url %></td>
          </tr>
        <%end%>

        <tr>
          <td>Body:</td>
          <td><%= @policy.body %></td>
        </tr>

        <tr>
          <td>User:</td>
          <td><%= @policy.user.name %></td>
        </tr>
      </table>
    </div>

    <div class="box-footer">
      <%= link_to 'Back', policies_path, class: 'btn btn-success' %>
      <%= link_to 'Edit', edit_policy_path(@policy), class: 'btn btn-success' if user_is_president %>
      <%= link_to 'Destroy', @policy, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' if user_is_president %>
    </div>

  </div>
</section>

