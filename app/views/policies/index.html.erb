<%= render partial: 'policies/header/header'%>


<section class="content">
  <div class="box box-success">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 dataTables_filter">
          <%= link_to 'New Policy', new_policy_path, class: 'btn btn-primary' if user_is_president%>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-bordered">
        <tr>
          <th>Name</th>
          <th colspan="4"></th>
        </tr>
        <% @policies.each do |policy| %>
          <tr>
            <td>
              <%= truncate_text(policy.name, 30) %>
                <%= '<small class="label bg-green">new</small>'.html_safe  if (@unread_policy_ids).include?(policy.id) %>
              </td>
            <td>
              <%= link_to 'Download', policy.file.url if policy.file.url%>
            </td>
            <td><%= link_to 'Show', policy %></td>
            <td><%= link_to 'Edit', edit_policy_path(policy) if user_is_president %></td>
            <td><%= link_to 'Destroy', policy, method: :delete, data: { confirm: 'Are you sure?' } if user_is_president %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</section>
