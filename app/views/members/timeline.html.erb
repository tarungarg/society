<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    User Profile
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">User profile</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <div class="row">

    <%= render 'members/partials/user_details' %>

    <div class="col-md-9">
      <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
          <li><a href="/members/<%= current_user.id%>/user_profile">Activity</a></li>
          <li class="active"><a href="/members/timeline">Timeline</a></li>
          <li><a href="/members/<%= current_user.id %>/profile_update">Settings</a></li>
        </ul>
        <div class="tab-content-bg">
          <!-- /.tab-pane -->
          <div class="tab-pane" id="timeline">
            <div class="box box-primary">
              <div class="box-body">
                <ul class="timeline timeline-inverse list-timline">
                  <li class="time-label">
                        <!-- <span class="bg-red"> -->
                          <!-- 10 Feb. 2014 -->
                        <!-- </span> -->
                  </li>
                    <%= render_activities(@activities) %>
                </ul>
                <div id="timelines-paginate">
                  <%= will_paginate @activities %>
                </div>
              </div>
            </div>
          </div>

        </div>
        <!-- /.tab-content -->
      </div>
      <!-- /.nav-tabs-custom -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->

</section>
