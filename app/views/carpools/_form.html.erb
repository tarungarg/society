<%= simple_form_for(@carpool) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :desc %>
    <%= f.input :user_id %>
    <%= f.input :date %>
    <%= f.association :tag_list do %>
    <%= f.input :tag_list, {class: 'select2', multiple: true, :style => "width:100%;"} %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


