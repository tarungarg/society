<%= render partial: 'carpools/header/header'%>

<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"> Announcement Information</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body">
      <table class="table">
        <tr>
          <td>Ride:</td>
          <td><%= @carpool.from %>
        -
          <%= @carpool.to %></td>

        </tr>

        <tr>
          <td>Desc:</td>
          <td><%= @carpool.desc %></td>
        </tr>

        <tr>
          <td>User:</td>
          <td><%= @carpool.user_id %></td>
        </tr>

        <tr>
          <td>Date:</td>
          <td><%= @carpool.date %></td>
        </tr>

        <tr>
          <td>Routes:</td>
          <td><%= @carpool.tag_list %></td>
        </tr>
      </table>
    </div>
    <div class="box-footer">
      <%= link_to 'Edit', edit_carpool_path(@carpool), class: 'btn btn-success' if current_user.id == @carpool.user_id  %>
      <%= link_to 'Back', carpools_path, class: 'btn btn-success' %>
    </div>

  </div>
</section>
