<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
  <div class="box-body">
    <div class="form-group">
      <%= f.label :recipients %>
      <%= f.select(:recipients, recipients_options, {}, { multiple: true , class: "form-control form-control chosen-it" })%>
    </div>
    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control ckeditor',placeholder: "Type your message here", rows: 4  %>
    </div>
  </div>

  <div class="box-footer">
    <%= f.submit "Send Message", class: "btn btn-success" %>
  </div>

<% end %>
