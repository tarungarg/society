<%= render partial: 'suggestions/header/header'%>

<section class="content">
  <div class="box box-warning">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 dataTables_filter">
          <%= link_to 'New Suggestion', new_suggestion_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-bordered">
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
        <% @suggestions.each do |suggestion| %>
          <tr>
            <td><%= truncate_text(suggestion.title) %></td>
            <td><%= link_to 'Show', suggestion %></td>
            <td><%= link_to 'Edit', edit_suggestion_path(suggestion)  if current_user.id ==  suggestion.user_id %></td>
            <td><%= link_to 'Destroy', suggestion, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id ==  suggestion.user_id %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</section>

