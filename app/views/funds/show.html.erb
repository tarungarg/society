<section class="content-header">
  <h1>
    Funds
    <small>Aware of your money</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Funds</li>
  </ol>
</section>

<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"> Announcement Information</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body">
      <table class="table">
        <tr>
          <td>Amount:</td>
          <td><%= @fund.amount %></td>
        </tr>

        <tr>
          <td>Title:</td>
          <td><%= @fund.title %></td>
        </tr>

        <tr>
          <td>Desc:</td>
          <td><%= @fund.desc %></td>
        </tr>

        <tr>
          <td>Date:</td>
          <td><%= basic_date_only @fund.date %></td>
        </tr>
      </table>
    </div>

    <div class="box-footer">
      <%= link_to 'Back', funds_path, class: 'btn btn-success' %>
    </div>

  </div>
</section>