<div class="row">
  <div class="col-md-12">
    <div class="box box-warning">
      <div class="box-header with-border">
        <div class="col-sm-4">
           <%= page_entries_info products %>
        </div>
        <div class="col-sm-6"></div>
        <div class="col-sm-2">
          <div class="dataTables_filter">
            <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>

      <div class="box-body">
        <table class="table table-bordered">
          <tr>
            <th>Name</th>
            <th>Amount</th>
            <th colspan="3"></th>
          </tr>

          <% products.each do |product| %>
            <% cache product do %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.amount %></td>
                <td>
                  <%= link_to product, class: 'btn bg-yellow btn-xs', placeholder: 'Show' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <% if current_user.id == product.user_id %>
                    <%= link_to edit_product_path(product), class: 'btn bg-primary btn-xs', placeholder: 'Edit' do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn bg-red btn-xs' do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>

      <div class="box-footer">
        <%= will_paginate products, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>


