<%= render partial: 'products/header/header'%>

<section class="content">
  <div class="box box-warning">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 dataTables_filter">
          <%#= link_to 'New Suggestion', new_suggestion_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="tab-content">
          <%= form_for_filterrific @filterrific do |f| %>
            <div class="col-xs-3">
              <label>Search:</label>
              <%= f.text_field(:search_query, class: 'filterrific-periodically-observed form-control') %>
            </div>
            <div class="col-xs-3">
              <label>Date On:</label>
              <div class="input-group date">
                <div class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                </div>
                <%= f.text_field(:date_on, class: 'js-datepicker form-control' ) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="box-footer">
      <%= link_to('Reset filters', reset_filterrific_url, class: 'btn btn-info') %>
      <%= render_filterrific_spinner %>
    </div>

  </div>

  <div id="filterrific_results"><%= render partial: 'products/index', locals: { products: @products } %>
  </div>
</section>

