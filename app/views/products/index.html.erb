<%= render partial: 'products/header/header'%>


<section class="content">
  <div class="box box-warning">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 dataTables_filter">
          <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-bordered">
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th colspan="3"></th>
        </tr>

        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.amount %></td>
            <td><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) if current_user.id == product.user_id %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == product.user_id %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</section>

