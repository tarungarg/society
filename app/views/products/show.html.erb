<%= render partial: 'products/header/header'%>

<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"> Jobs Information</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body">
      <table class="table">
        <tr>
          <td>Name:</td>
          <td><%= @product.name %></td>
        </tr>

        <tr>
          <td>Desc:</td>
          <td><%= @product.desc %></td>
        </tr>

        <tr>
          <td>Images:</td>
         <% @product.images.each do |p| %>
          <td><%= image_tag p.url, class: 'img-thumb' %></td>
        <% end %>
        </tr>

        <tr>
          <td>Amount:</td>
          <td><%= @product.amount %></td>
        </tr>
      </table>
    </div>

    <div class="box-footer">
      <%= link_to 'Back', products_path, class: 'btn btn-success' %>
    </div>

  </div>
</section>
