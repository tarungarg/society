<p id="notice"><%= notice %></p>

<h1>Listing Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>Charge</th>
      <th>User</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.charge_id %></td>
        <td><%= subscription.user_id %></td>
        <td><%= subscription.paid %></td>
        <td>
          <%= link_to subscription, class: 'btn bg-yellow btn-xs', placeholder: 'Show' do %>
            <i class="fa fa-eye"></i>
          <% end %>
          <%= link_to edit_subscription_path(subscription), class: 'btn bg-primary btn-xs', placeholder: 'Edit' do %>
            <i class="fa fa-pencil"></i>
          <% end %>
          <%= link_to subscription, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn bg-red btn-xs' do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subscription', new_subscription_path %>
