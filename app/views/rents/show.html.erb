<%= render partial: 'rents/header/header'%>

<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"> Jobs Information</h3>

      <div class="box-tools">
      </div>
    </div>

    <div class="box-body">
      <table class="table">
        <tr>
          <td>Name:</td>
          <td><%= @rent.name %></td>
        </tr>

        <tr>
          <td>Desc:</td>
          <td><%= @rent.desc %></td>
        </tr>

        <tr>
          <td>Images:</td>
          <td><%= @rent.images %></td>
        </tr>

        <tr>
          <td>Amount:</td>
          <td><%= @rent.amount %></td>
        </tr>
      </table>
    </div>

    <div class="box-footer">
      <%= link_to 'Edit', edit_rent_path(@rent), class: 'btn btn-success' %>
      <%= link_to 'Back', rents_path, class: 'btn btn-success' if current_user.id == @rent.user_id %>
    </div>

  </div>
</section>

