<%= simple_form_for(@rent) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :flat_type, collection: Rent.flat_types,  include_blank: false, label: 'Want To?' %>
    <%= f.input :sale_by, collection: Rent.sale_bys,  include_blank: false, label: 'Sale By' %>
    <%= f.input :name, label: 'Name' %>
    <%= f.input :desc, label: 'Description' %>
    <%= f.input :street_addr, label: 'Address' %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :bhk, label: 'BHK' %>


    <%= f.input :images, as: :file, input_html: { multiple: true } %>
    <%= f.input :amount, label: 'Price' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
