<%= render partial: 'rents/header/header'%>

<section class="content">
  <div class="box box-warning">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 dataTables_filter">
          <%= link_to 'New Flat', new_rent_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-bordered">
        <tr>
          <th>Name</th>
          <th>Desc</th>
          <th>Amount</th>
          <th colspan="3"></th>
        </tr>
        <% @rents.each do |rent| %>
          <tr>
            <td><%= rent.name %></td>
            <td><%= rent.desc %></td>
            <td><%= rent.amount %></td>
            <td><%= link_to 'Show', rent %></td>
            <td><%= link_to 'Edit', edit_rent_path(rent) %></td>
            <td><%= link_to 'Destroy', rent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</section>
